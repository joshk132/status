<% include ../partials/admin/header %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Generate A New Status</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin/status/new" method="POST">
                <div class="form-group">
                    <select name="type" class="selectpicker" required>
                        <option value="" disabled selected>Status Type</option>
                        <option value="Successful Solution">Successful Solution</option>
                        <option value="Planned Maintenance">Planned Maintenance</option>
                        <option value="Unplanned Maintenance">Unplanned Maintenance</option>
                        <option value="Incident">Incident</option>
                        <option value="Investigating">Investigating</option>
                        <option value="Outage">Outage</option>
                        <option value="Service Interruption">Service Interruption</option>
                    </select>
                </div>
                <div class="form-group">
                    <select name="service" class="selectpicker" required>
                        <option value="" disabled selected>Service</option>
                        <% for(var i=0; i<services.length; i++) {%>
                           <option value="<%= services[i].service %>"><%= services[i].service %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="message">Status Message</label>
                    <textarea class="form-control" name="message" rows="3" required></textarea>
                  </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/admin/footer %>